section.popup-service-location
  div.popup-service-location__block
    div.popup-service-location__bg
    div.popup-service-location__data.popup-service-location__data_send
      p.popup-service-location__data_title On your phone number (333) 333-3333 will be sent the code for confirming
      div.popup-service-location__data_buttons.popup-service-location__data_buttons-send
        button.btn Cancel
        button.btn Send
    div.popup-service-location__data.popup-service-location__data_code
      p.popup-service-location__data_title On your phone number (333) 333-3333 was sent the SMS. Please type code from SMS
      div.popup-service-location__data_input
        input(type="text" placeholder="Type code")
        p.popup-service-location__data_error Please type the correct code!
      div.popup-service-location__data_buttons.popup-service-location__data_buttons-code
        button.btn Change Phone
        button.btn OK
    div.popup-service-location__data.popup-service-location__data_thank
      p.popup-service-location__data_title.popup-service-location__data_title-thank Thank You!
      div.popup-service-location__data_buttons.popup-service-location__data_buttons-thank
        button.btn OK

